  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debugger (Main App)",
      "type": "debugpy",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "connect": { "host": "localhost", "port": 3001 },
      "justMyCode": false,
    },
    {
      "name": "Debugger (Tests)",
      "type": "debugpy",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "connect": { "host": "localhost", "port": 3002 },
    },
    {
      "name": "Debugger (Commands)",
      "type": "debugpy",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "connect": { "host": "localhost", "port": 3003 },
    }
  ],
}
